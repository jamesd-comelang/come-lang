// Test string validation methods
module main

import std
import string

int main() {
    int failures = 0
    
    // Test 1: isalpha() - all letters
    string alpha = "Hello"
    if (!alpha.isalpha()) {
        std.out.printf("FAIL: isalpha('Hello') - expected true\n")
        failures = failures + 1
    }
    
    // Test 2: isalpha() - with numbers
    string mixed = "Hello123"
    if (mixed.isalpha()) {
        std.out.printf("FAIL: isalpha('Hello123') - expected false\n")
        failures = failures + 1
    }
    
    // Test 3: isdigit() - all digits
    string digits = "12345"
    if (!digits.isdigit()) {
        std.out.printf("FAIL: isdigit('12345') - expected true\n")
        failures = failures + 1
    }
    
    // Test 4: isdigit() - with letters
    if (mixed.isdigit()) {
        std.out.printf("FAIL: isdigit('Hello123') - expected false\n")
        failures = failures + 1
    }
    
    // Test 5: isalnum() - alphanumeric
    if (!mixed.isalnum()) {
        std.out.printf("FAIL: isalnum('Hello123') - expected true\n")
        failures = failures + 1
    }
    
    // Test 6: isalnum() - with spaces
    string withspace = "Hello 123"
    if (withspace.isalnum()) {
        std.out.printf("FAIL: isalnum('Hello 123') - expected false\n")
        failures = failures + 1
    }
    
    // Test 7: isspace() - whitespace only
    string space = " \t\n"
    if (!space.isspace()) {
        std.out.printf("FAIL: isspace(' \\t\\n') - expected true\n")
        failures = failures + 1
    }
    
    // Test 8: isspace() - with text
    if (alpha.isspace()) {
        std.out.printf("FAIL: isspace('Hello') - expected false\n")
        failures = failures + 1
    }
    
    if (failures == 0) {
        std.out.printf("PASS: All validation tests passed (8/8)\n")
        return 0
    } else {
        std.out.printf("FAIL: %d test(s) failed\n", failures)
        return 1
    }
}
